# CipherLink Backend Environment Configuration
# Copy this file to .env and update with your values

# ============ Application ============
APP_NAME=CipherLink
DEBUG=False

# ============ Security ============
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ Database ============
# SQLite (development)
DATABASE_URL=sqlite:///./cipherlink.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/cipherlink

# ============ CORS ============
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ============ Rate Limiting ============
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============ Encryption Settings ============
MIN_PREKEY_COUNT=10
MAX_PREKEY_BATCH=100
SIGNED_PREKEY_ROTATION_DAYS=7

# ============ Message Settings ============
MAX_MESSAGE_SIZE=65536
MESSAGE_CLEANUP_INTERVAL=60

# ============ Vault Settings ============
MAX_VAULT_ITEMS=1000
MAX_VAULT_ITEM_SIZE=1048576

# ============ File Upload ============
MAX_FILE_SIZE=52428800
