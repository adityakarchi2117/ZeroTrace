{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "strict": false,
        "jsx": "react-native",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "include": [
        "App.tsx",
        "index.js",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "android",
        "ios",
        "babel.config.js",
        "metro.config.js"
    ]
}